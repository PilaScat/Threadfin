{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "tsc build",
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["-dev"]
        },
        {
            "preLaunchTask": "Build",
            "type": "msedge",
            "request": "launch",
            "outFiles": [
                "${workspaceFolder}/html/**/*.(m|c|)js",
                "!**/node_modules/**"
            ],
            "name": "Launch Edge against localhost",
            "url": "http://192.168.137.1:34400/web/",
            "webRoot": "${workspaceFolder}/html/"
          }
    ]
}